<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AtMonitor.Views.PressureReadingPage"
             xmlns:views="clr-namespace:AtMonitor.Views"
             xmlns:vm="clr-namespace:AtMonitor.ViewModels"
             x:DataType="vm:PressureReadingPageViewModel"
             Title="PressureReadingPage">
    <VerticalStackLayout>

        <CollectionView ItemsSource="{Binding Readings}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="vm:PressureReadingViewModel">
                    <Frame>
                        <VerticalStackLayout>
                            <Label Text="{Binding Person.Name}"/>
                            <Label Text="{Binding Pressure}"/>
                            <Stepper Value="{Binding Pressure}" Minimum="0" Maximum="360" Increment="10"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Ãœbernehmen" Command="{Binding OkCommand}" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>